@model CreateRoleViewModel

@{
    ViewBag.Title = "Create New Role";
}

<h1>Create New Role</h1>


<div class="row">
    <div asp-validation-summary="All" style="margin:15px" class="text-danger"></div>
    <form method="post">
        <div class="form-group row " style="margin: 15px;">
            <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="RoleName" class="form-control" placeholder="Enter Role">
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
        </div>



        <div class="form-group-row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
            </div>

    </form>
</div>