@model RegisterViewModel

@{
    ViewBag.Title = "User Registration";
}

<h1 style="color: darkgray"> User Registration</h1>


<div class="row">
    <div asp-validation-summary="All" style="margin:15px" class="text-danger"></div>
    <form method="post">
<div class="form-group row " style="margin: 15px;">
            <label asp-for="Email" class="col-sm-2 col-form-label" style="color: darkgray"></label>
    <div class="col-sm-10">
        <input asp-for="Email" class="form-control" placeholder="Enter Email">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div> 
</div> 

       
                <div class="form-group row " style="margin: 15px;">
            <label asp-for="Password" class="col-sm-2 col-form-label" style="color: darkgray"></label>
                    <div class="col-sm-10">
                        <input asp-for="Password" class="form-control" placeholder="Enter Password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>


        <div class="form-group row " style="margin: 15px;">
            <label asp-for="ConfirmPassword" class="col-sm-2 col-form-label" style="color: darkgray"></label>
            <div class="col-sm-10">
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Enter Password Again">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row " style="margin: 15px;">
            <label asp-for="City" class="col-sm-2 col-form-label" style="color: darkgray"></label>
            <div class="col-sm-10">
                <input asp-for="City" class="form-control" placeholder="Enter your City">
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group-row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Register</button>
            </div>
        </div>

    </form>
</div>